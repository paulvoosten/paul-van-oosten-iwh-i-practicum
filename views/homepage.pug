doctype html
html
    head
        title=`${title}`
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 Custom Object Table
        a(href="/update-cobj") Add/Update this table
        table
            tr
                th Name
                th Width
                th Height
            each brick in bricks
                tr
                    td #{brick.properties.name}
                    td #{brick.properties.width}
                    td #{brick.properties.height}
